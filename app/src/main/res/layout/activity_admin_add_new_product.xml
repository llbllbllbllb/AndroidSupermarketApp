<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAddNewProductActivity">


    <ImageView
        android:id="@+id/select_product_image"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/select_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/inputs_text"
        android:tint="@color/colorPrimary"

        />

    <TextView
        android:id="@+id/select_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Product Image"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/select_product_image"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"



        />

    <EditText
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_product_image"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Product Name"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/inputs_text"
        />

    <EditText
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name"
        android:inputType="textMultiLine"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Product Description"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/inputs_text"
        />


    <EditText
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_description"
        android:inputType="numberDecimal"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Product Price"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/inputs_text"
        />

    <TextView
        android:id="@+id/cad_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAD"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_alignBaseline="@+id/product_price"
        android:textStyle="bold"
        android:layout_alignRight="@+id/product_price"
        android:layout_marginRight="20dp"

        />


    <Button
        android:id="@+id/add_new_product"
        android:layout_width="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price"
        android:background="@drawable/button_solid"
        android:text="Add New Product"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"

        />


</RelativeLayout>