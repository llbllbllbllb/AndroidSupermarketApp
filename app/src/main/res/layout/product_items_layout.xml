<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/card_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/card_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_product_image"
            android:text="Product Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/card_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_product_image"
            android:text="Product Price"
            android:textSize="20dp"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"

            />
        <TextView
            android:id="@+id/card_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_product_price"
            android:text="Product Description"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>